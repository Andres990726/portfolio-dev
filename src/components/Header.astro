---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { title: "Experiencia", label: "experiencia", url: "/#experiencia" },
  { title: "Proyectos", label: "proyectos", url: "/#proyectos" },
  { title: "Sobre mí", label: "sobre-mi", url: "/#sobre-mi" },
  { title: "Educación", label: "educacion", url: "/#educacion" },
  {
    title: "Contacto",
    label: "contacto",
    url: "mailto:andresgarcia990726@gmail.com",
  },
];
---

<header class="fixed top-0 z-20 w-full mt-2">
  <nav
    class="w-full sm:w-fit
    mx-auto
    flex items-center justify-between sm:justify-center
    px-3 py-2
    text-sm font-medium
    rounded-full
    text-gray-600 dark:text-gray-200
    bg-white/60 dark:bg-gray-800/90
    backdrop-blur"
  >
    {/* Mobile: menu button */}
    <button
      id="mobile-menu-button"
      class="sm:hidden px-2 py-2 rounded-md"
      aria-label="Abrir menú"
    >
      ☰
    </button>

    {/* Desktop nav */}
    <div class="hidden sm:flex items-center gap-1">
      {
        navItems.map((link) => (
          <a
            class="px-2 py-2 transition hover:text-blue-500 dark:hover:text-blue-500"
            aria-label={link.label}
            href={link.url}
          >
            {link.title}
          </a>
        ))
      }
    </div>

    {/* Theme toggle */}
    <div class="ml-1 sm:ml-2">
      <ThemeToggle />
    </div>
  </nav>
</header>

{/* Mobile dropdown */}

<nav
  id="mobile-menu"
  class="flex flex-col gap-3 sm:hidden
    fixed top-16 left-1/2 -translate-x-1/2
    w-[90%] max-w-sm
    rounded-xl
    bg-white/60 dark:bg-gray-800/90
    backdrop-blur
    shadow-lg
    p-4
    z-30"
>
  {
    navItems.map((link) => (
      <a
        class=" bg-transparent px-3 py-2 rounded-md hover:text-blue-500 dark:hover:text-blue-500"
        href={link.url}
      >
        {link.title}
      </a>
    ))
  }
</nav>

<script>
  document.addEventListener("astro:page-load", () => {
    const btn = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");

    btn?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });

    menu?.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
      });
    });
  });
</script>

<style>
  nav {
    animation: nav-shadow 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadow {
    0% {
      @apply bg-white/0 dark:bg-gray-800/0;
    }
    to {
      @apply shadow-lg ring-1 ring-white/10 backdrop-blur;
    }
  }
</style>
