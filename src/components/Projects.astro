---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/TailwindCSS.astro";
import JavaIcon from "./icons/Java.astro";
import TypeScriptIcon from "./icons/Typescript.astro";
import SpringBootIcon from "./icons/Spring.astro";
import ReactIcon from "./icons/React.astro";
import MySQLIcon from "./icons/MySQL.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JAVA: {
    name: "Java",
    class: "bg-[#D9E2EC] text-[#5382A1]", // Amarillo claro para buen contraste
    icon: JavaIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#E5E5E5] text-blue-600", // Gris claro con texto azul
    icon: TypeScriptIcon,
  },
  SPRINGBOOT: {
    name: "Spring Boot",
    class: "bg-[#F4F4F9] text-green-700", // Gris claro con texto verde oscuro
    icon: SpringBootIcon,
  },
  REACT: {
    name: "React",
    class: "bg-[#282C34] text-[#61DAFB]", // Gris oscuro con texto en azul React
    icon: ReactIcon,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#F2F2F2] text-[#00546B]", // Gris claro con texto azul oscuro
    icon: MySQLIcon,
  },
};
const PROJECTS = [
  {
    title: "Certificaciones RC",
    description:
      "Plataforma diseñada para automatizar el proceso de certificación de registro calificado de programas académicos, requerido cada 7 años para su continuidad. Permite a los coordinadores completar los documentos necesarios y al departamento de calidad revisarlos, eliminando procesos manuales. Incluye módulos para la gestión y revisión de documentos, autenticación y seguridad avanzada, gestión de usuarios y roles, historial de certificaciones, así como descarga y previsualización de archivos, optimizando la eficiencia y transparencia en el cumplimiento de requisitos académicos.",
    github:
      "https://github.com/orgs/CertificacionesRC/repositories?q=visibility%3Apublic+archived%3Afalse",
    image: "/public/projects/rc.webp",
    tags: [TAGS.NEXT, TAGS.TYPESCRIPT, TAGS.JAVA, TAGS.SPRINGBOOT, TAGS.MYSQL],
  },

  {
    title: "Pet GPS - Ubicación en tiempo real de mascotas",
    description:
      "Prototipo funcional desarrollado en React y TypeScript que muestra en un mapa la ubicación en tiempo real del usuario y su mascota. Utiliza una API de ThingSpeak, conectada a un GPS, para consultar las coordenadas de longitud y latitud. Ideal para pruebas de rastreo de mascotas, con una visualización precisa y dinámica en entornos diversos.",
    link: "https://pet-gps.vercel.app/",
    github: "https://github.com/Andres990726/pet-gps",
    image: "/public/projects/petgpc.webp",
    tags: [TAGS.REACT, TAGS.TYPESCRIPT],
  },
  {
    title: "Arquitectura Hexagonal - programación en Java Spring Boot",
    description:
      "Aplicación desarrollada en Java con Spring Boot para gestionar y centralizar las publicaciones académicas de docentes universitarios. Implementa una arquitectura hexagonal, asegurando una alta separación de responsabilidades y facilidad de mantenimiento. La aplicación se conecta a una base de datos MySQL mediante JPA, permitiendo un acceso eficiente y seguro a los datos.",
    github: "https://github.com/Andres990726/practice-hexagonal-architecture",
    image: "/public/projects/hexagonal.webp",
    tags: [TAGS.JAVA, TAGS.SPRINGBOOT, TAGS.MYSQL],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article
        class="
          group
          flex flex-col
          gap-8
          md:flex-row
          md:items-start
          md:gap-8
        "
      >
        <!-- Imagen -->
        <div class="w-full md:w-1/2">
          <div
            class="
              relative
              overflow-hidden
              rounded-xl
              shadow-xl
              transition
              duration-500
              md:group-hover:-translate-y-1
              md:group-hover:shadow-2xl
            "
          >
            <img
              alt={title}
              src={image}
              loading="lazy"
              class="
                w-full
                h-56
                sm:h-72
                md:h-full
                object-cover
                object-top
                transition
                duration-500
                md:scale-110
                md:group-hover:scale-105
              "
            />
          </div>
        </div>

        <!-- Contenido -->
        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>

          <!-- Tags -->
          <div class="mt-3">
            <ul
              class="
                flex
                gap-2
                flex-wrap
                md:flex-nowrap
                md:overflow-visible
                overflow-x-auto
                pb-1
              "
            >
              {tags.map((tag) => (
                <li class="shrink-0">
                  <span
                    class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Descripción -->
          <p class="mt-4 text-gray-700 dark:text-gray-400">
            {description}
          </p>

          <!-- Acciones -->
          <footer class="flex gap-4 mt-6">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </article>
    ))
  }
</div>

